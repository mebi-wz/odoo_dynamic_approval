<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree (List) View -->
    <record id="view_approval_action_tree" model="ir.ui.view">
        <field name="name">approval.action.tree</field>
        <field name="model">approval.action</field>
        <field name="arch" type="xml">
            <list string="Approval Actions">
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_approval_action_form" model="ir.ui.view">
        <field name="name">approval.action.form</field>
        <field name="model">approval.action</field>
        <field name="arch" type="xml">
            <form string="Approval Action">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_approval_action" model="ir.actions.act_window">
        <field name="name">Approval Actions</field>
        <field name="res_model">approval.action</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create global approval actions.
            </p>
        </field>
    </record>
</odoo>
