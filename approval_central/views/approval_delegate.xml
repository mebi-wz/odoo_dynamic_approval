<odoo>
    <!-- Tree View -->
    <record id="view_approval_delegate_tree" model="ir.ui.view">
        <field name="name">approval.delegate.tree</field>
        <field name="model">approval.delegate</field>
        <field name="arch" type="xml">
            <list string="Approval Delegations">
                <field name="original_user_id"/>
                <field name="delegate_user_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_approval_delegate_form" model="ir.ui.view">
        <field name="name">approval.delegate.form</field>
        <field name="model">approval.delegate</field>
        <field name="arch" type="xml">
            <form string="Approval Delegation">
                <sheet>
                    <group>
                        <field name="original_user_id"/>
                        <field name="delegate_user_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_approval_delegate" model="ir.actions.act_window">
        <field name="name">Approval Delegations</field>
        <field name="res_model">approval.delegate</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <!-- Menu Item -->

</odoo>
