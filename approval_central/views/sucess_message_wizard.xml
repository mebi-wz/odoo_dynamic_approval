<odoo>
    <record id="view_success_message_wizard" model="ir.ui.view">
        <field name="name">success.message.wizard</field>
        <field name="model">popup</field>
        <field name="arch" type="xml">
            <form class="o_form_transient" string="" footer="False" create="false" edit="false" delete="false">
                <sheet>
                    <div class="text-center">
                        <label for="message"
                               string="Success"
                               invisible="1"/>

                        <div style="margin:10px 0; font-size:19px; color: green;">
                            <field name="message" readonly="1"/>
                        </div>

                        <footer class="d-flex justify-content-center">
                          <button string="OK" class="btn btn-success" special="cancel"/>
                        </footer>


                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>





